<form action="/api/pais/editar/<%= pais._id %>?_method=PUT" method="POST" class="max-w-xl mx-auto p-4">

    <div class="mb-4">
      <label class="block font-medium">Nombre Oficial</label>
      <input type="text" name="nombreOficial" value="<%= pais.nombreOficial %>" required class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="mb-4">
      <label class="block font-medium">Capital</label>
      <input type="text" name="capital" value="<%= pais.capital %>" class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="mb-4">
      <label class="block font-medium">Fronteras</label>
      <input type="text" name="fronteras" value="<%= pais.fronteras %>" class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="mb-4">
      <label class="block font-medium">Área</label>
      <input type="number" name="area" value="<%= pais.area %>" required class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="mb-4">
      <label class="block font-medium">Población</label>
      <input type="number" name="poblacion" value="<%= pais.poblacion %>" required class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="mb-4">
      <label class="block font-medium">Índice Gini</label>
      <input type="number" step="any" name="gini" value="<%= pais.gini %>" class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="mb-4">
      <label class="block font-medium">Zonas Horarias</label>
      <input type="text" name="timezones" value="<%= pais.timezones %>" class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="mb-4">
      <label class="block font-medium">Creador</label>
      <input type="text" name="creador" value="<%= pais.creador %>" required class="w-full border rounded px-3 py-2" />
    </div>
  
    <div class="flex justify-between mt-4">
      <a href="/dashboard" class="px-4 py-2 bg-gray-300 rounded-lg hover:bg-gray-400">Cancelar</a>
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded">
        Guardar Cambios
      </button>
    </div>
  </form>
  